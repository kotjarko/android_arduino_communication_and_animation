<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.brainy.iskin.MainActivity"
    android:id="@+id/fullscreen_content">

    <ImageView android:id="@+id/hidden"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="hidden_button_click"
        />

    <ImageView android:id="@+id/back_image_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorBlack"
        />

    <TextView android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="100dip"
        android:text="@string/printer_activate"
        android:textSize="16pt"
        android:textAlignment="center"

        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        android:layout_marginTop="25dip" />

    <ImageView android:id="@+id/button1"
        android:layout_width="300dip"
        android:layout_height="300dip"
        android:layout_marginLeft="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="100dip"
        android:background="@drawable/e1"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        />

    <ImageView android:id="@+id/button2"
        android:layout_width="300dip"
        android:layout_height="300dip"
        android:layout_marginLeft="650dip"
        android:layout_marginStart="650dip"
        android:layout_marginTop="100dip"
        android:background="@drawable/d1"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        />

    <TextView android:id="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="100dip"
        android:text="@string/reducer_activate"
        android:textSize="16pt"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        android:layout_marginBottom="15dip" />
    <TextView android:id="@+id/text3"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="100dip"
        android:text="|"
        android:textSize="16pt"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dip"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible" />

</FrameLayout>
